<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home_mode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_home"
    android:gravity="center_horizontal"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ib_zz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:src="@drawable/t_zhengzu"/>

        <ImageView
            android:id="@+id/ib_hz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ib_zz"
            android:padding="1dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/t_hezu"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_below="@id/ll">

        <ImageView
            android:id="@+id/ib_zb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/t_zhoubian"
            android:padding="1dp"/>

        <ImageView
            android:id="@+id/ib_1v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@drawable/t_1v1"
            android:padding="1dp"/>
    </LinearLayout>





</RelativeLayout>
