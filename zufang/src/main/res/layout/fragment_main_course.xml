<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.shamanland.fab.FloatingActionButton
        android:id="@+id/btn_main_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="24dp"
        android:elevation="5dp"
        android:src="@drawable/fab_add"
        app:floatingActionButtonColor="@color/colorPrimary"
        app:floatingActionButtonImplicitElevation="false"
        app:floatingActionButtonSize="normal"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/fresh_main_course"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView

            android:id="@+id/list_main_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:paddingTop="-5dp"
            ></android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>