<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    >

    <RelativeLayout
        android:id="@+id/rl_item_courseBackgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beijing1"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_item_courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="fkjslfkjflksjl"
            android:textColor="#fff"
            android:textSize="20sp"/>

        <ImageView
            android:layout_marginTop="-10dp"
            android:padding="10dp"
            android:id="@+id/img_item_courseMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_menu_moreoverflow_mtrl_alpha"/>

        <TextView
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_item_courseCode"
        android:drawableRight="@drawable/ic_arrow_vote_down_white_18dp"
        android:text="JFKLSDJKL"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_item_StudentCount"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/tv_item_courseCode"
            android:gravity="center_vertical"
            android:text="成员5人"
            android:textColor="#fff"
            android:textSize="16sp"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>