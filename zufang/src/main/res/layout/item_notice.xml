<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/tv_t_homework_add_backgroud"
                android:padding="8dp">


    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="121321654"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/img_notice_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_notice_title"
        android:layout_marginTop="14dp"
        android:src="@drawable/abc_ic_menu_overflow_material"/>

    <TextView
        android:id="@+id/tv_notice_publishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice_title"
        android:layout_marginTop="10dp"
        android:text="03月17日 08:37"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice_publishTime"
        android:layout_marginTop="10dp"
        android:maxLines="5"
        android:text="flskdjflksdf"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        />

</RelativeLayout>