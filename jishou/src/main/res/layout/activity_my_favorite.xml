<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" ><LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="horizontal"
    android:background="#F0F0F0"
    android:gravity="center_vertical"
     >
    <TextView
        style="@style/house_list_bar"
        android:text="@string/txt_home_ershoufang" />
   
</LinearLayout>
<ImageView 
		    android:layout_width="match_parent"
		    android:layout_height="1px"
		    android:background="@drawable/icon_mine_horizontal_line"
		    
		    />

    <ListView
        android:id="@+id/lv_house_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/bg_selector"
         >
    </ListView>
    <include layout="@layout/no_data_layout" android:visibility="gone" />
    <Button 
        android:id="@+id/btn_clear"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_clear"
        android:text="@string/favorite_clear"
       android:layout_gravity="center_horizontal"
        />
    <include layout="@layout/loading_layout" />

</LinearLayout>

    