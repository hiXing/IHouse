<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name_cers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="李四"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/sex_cers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name_cers_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="男"
        android:textColor="@color/yfc_zi"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/fname_cers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sex_cers_tv"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="大唐世家"
        android:textColor="@color/yfc_zi"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/iscome_cers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="未到访"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/phone_cers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fname_cers_tv"
        android:layout_centerHorizontal="true"
        android:text="136xxxx7564"
        android:textColor="@color/yfc_zi"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time_cers_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone_cers_tv"
        android:layout_below="@+id/phone_cers_tv"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="2016.5.5"
        android:textColor="@color/yfc_zi"
        android:textSize="12sp" />

</RelativeLayout>
