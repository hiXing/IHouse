<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include
        android:id="@id/detailTitlebar"
        layout="@layout/titlebar_detail" />

    <RelativeLayout
        android:id="@+id/rl_acconut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="充值到账户"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/tv_account"
            style="@style/TextMidGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow1"
            android:gravity="center"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" 
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rl_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="转到银行卡"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:id="@+id/iv_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_arrow_right" />
        <TextView
            android:id="@+id/tv_bank"
            style="@style/TextMidGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow2"
            android:gravity="center"
             />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />

    <RelativeLayout
        android:id="@+id/rl_frozen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="冻结的金额"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_mid" />

        <ImageView
            android:id="@+id/iv_arrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_arrow_right" />
        <TextView
            android:id="@+id/tv_frozen"
            style="@style/TextMidGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_arrow3"
            android:gravity="center"
             />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />

</LinearLayout>