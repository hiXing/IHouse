<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include
        android:id="@id/detailTitlebar"
        layout="@layout/titlebar_detail" />

    <TextView
        style="@style/TextBigBlackBlod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="恭喜您!" 
        android:textSize="55sp"/>

    <TextView
        android:id="@+id/tv_option"
        style="@style/TextBigBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="提交房源成功" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_gray_dark" />

    <TextView
        android:id="@+id/tv_reward"
        style="@style/TextMidOrange"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="审核通过即奖励20元现金" 
        android:drawableLeft="@drawable/ic_wujiaoxing"
        android:drawablePadding="10dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_dark" />

    <Button
        android:id="@+id/btn_home"
        style="@style/TextBigOrange"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/stroke_orange_round"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="返回我的" 
        android:layout_gravity="center_horizontal"/>

</LinearLayout>